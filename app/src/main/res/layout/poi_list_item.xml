<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/poi_list_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/poi_item_layout"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/base_margin"
        android:padding="12dp"
        android:background="@drawable/shaddow_shape"
        android:layout_height="100dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:tint="@color/colorPrimary"
            android:src="@drawable/ic_my_location_black_24dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:paddingLeft="@dimen/item_padding"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/poi_item_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/colorSecondaryOrange"
                android:textStyle="bold"
                android:layout_weight="2"
                android:textSize="16dp"
                android:text="Default Name"/>

            <TextView
                android:id="@+id/poi_item_desc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/colorPrimary"
                android:layout_weight="1.5"
                android:textSize="10dp"
                android:text="Une super description ama"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="45dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/poi_item_lat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:layout_weight="1"
                android:text="Lat: -44.0"/>

            <android.support.v4.widget.ContentLoadingProgressBar
                android:layout_width="match_parent"
                android:background="@color/colorSecondaryOrange"
                android:layout_height="2dp" />

            <TextView
                android:id="@+id/poi_item_lng"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:layout_weight="1"
                android:text="Lng: -180.0"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>