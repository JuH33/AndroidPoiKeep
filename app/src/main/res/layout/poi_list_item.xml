<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/poi_list_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/poi_item_layout"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/base_margin"
        android:padding="@dimen/item_padding"
        android:background="@color/colorPrimaryDark"
        android:layout_height="100dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/mapbox_compass_icon"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/item_padding"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/poi_item_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/colorSecondaryWhite"
                android:textStyle="bold"
                android:layout_weight="2"
                android:textSize="18dp"
                android:text="Default Name"/>

            <TextView
                android:id="@+id/poi_item_desc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/colorSecondaryWhite"
                android:layout_weight="1.5"
                android:textSize="12dp"
                android:text="Une super description ama"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/poi_item_lat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/colorSecondaryWhite"
                android:layout_weight="1"
                android:text="Lat: -44.0"/>

            <android.support.v4.widget.ContentLoadingProgressBar
                android:layout_width="match_parent"
                android:background="@color/colorSecondaryWhite"
                android:layout_height="5dp" />

            <TextView
                android:id="@+id/poi_item_lng"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/colorSecondaryWhite"
                android:layout_weight="1"
                android:text="Lng: -180.0"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>