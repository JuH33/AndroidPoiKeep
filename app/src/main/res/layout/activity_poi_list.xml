<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PoiListActivity">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/poi_list_navigate_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/colorSecondaryWhite"
            app:fabSize="normal"
            android:layout_alignBottom="@id/poilist_listview"
            android:layout_alignEnd="@id/poilist_listview"
            android:layout_margin="@dimen/text_subtitle"
            android:src="@drawable/ic_add_black_24dp"/>

        <view class="android.support.v7.widget.RecyclerView"
            android:id="@+id/poilist_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>