<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <FrameLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- BACKGROUND IMAGE FROM FRAMELAYOUT CONFIGURATION -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:alpha="0.5"
            android:scaleX="@dimen/twice_scale"
            android:scaleY="@dimen/twice_scale"
            android:src="@drawable/mapbox_compass_icon" />

        <LinearLayout
            android:orientation="vertical"
            android:padding="@dimen/window_padding"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- /!\ REMOVE layout_height PROPERTY WHEN REAL LOGO -->
            <ImageView
                android:id="@+id/login_image_logo"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_marginTop="@dimen/base_margin"
                android:background="@color/colorSecondaryOrange" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryBlack"
                android:layout_marginTop="@dimen/base_margin"
                android:textSize="@dimen/text_subtitle"
                android:text="@string/logo_subtitle"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="140dp">

                <Button
                    android:padding="15dp"
                    android:id="@+id/login_start_button"
                    android:drawableTint="@color/colorSecondaryWhite"
                    android:layout_width="220dp"
                    android:layout_height="120dp"
                    android:layout_centerInParent="true"
                    android:text="@string/start_button_text"
                    android:backgroundTint="@color/colorPrimary"
                    android:drawableTop="@drawable/ic_navigation_black_24dp"
                    android:textColor="@color/colorSecondaryWhite"
                    android:textStyle="bold"
                    android:gravity="center"/>
            </RelativeLayout>

        </LinearLayout>

    </FrameLayout>
</android.support.constraint.ConstraintLayout>